@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}

<h3 class="text-center">Are you sure you want to delete the @Html.DisplayFor(model => model.Name) role? </h3>
<p class="text-center">Deleting this Role will remove all users from this role. It will not delete the users.</p>

<div class="flexbox">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group row">
            <div class="col-sm-3"></div>
            <div class="col-sm-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div class="col-sm-2"></div>
            <div class="col-sm-2">
                <input class="btn btn-cancel" type="button" value="Cancel" onclick="window.location.href='@Url.Action("Index", "RolesAdmin")';" />
            </div>
            <div class="col-sm-3"></div>
        </div>
    }
</div>
